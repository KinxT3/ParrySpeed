local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

local toggleButton = Instance.new("TextButton")
toggleButton.Text = "Auto Parry"
toggleButton.Size = UDim2.new(0, 100, 0, 40) -- Adjust size as desired
toggleButton.Position = UDim2.new(0.5, -50, 0.5, -20) -- Adjust position as desired
toggleButton.Parent = game:GetService("CoreGui").RobloxGui

local autoParryEnabled = false

toggleButton.MouseButton1Click:Connect(function()
    autoParryEnabled = not autoParryEnabled
    toggleButton.Text = autoParryEnabled and "Auto Parry (ON)" or "Auto Parry (OFF)"
end)

local function autoParry()
    while wait(0.1) do
        if autoParryEnabled then
            -- Detect incoming balls (replace with appropriate detection method):
            for _, Ball in pairs(workspace.Balls:GetChildren()) do
                if Ball.Position - Character.HumanoidRootPart.Position < 15 then
                    Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                end
            end
        end
    end
end

autoParry()
